@model AirUdC.GUI.Models.Parameters.CityModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4>City Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CityName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CityName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Country.CountryName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Country.CountryName)
                </dd>
            </dl>
            <div class="mt-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.CityId }, new { @class = "btn btn-primary mr-2" }) |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
