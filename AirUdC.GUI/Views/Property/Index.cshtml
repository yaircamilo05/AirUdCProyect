<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PropertyAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
