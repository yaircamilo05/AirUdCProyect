<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("AirBnb", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                    {
                    <li>@Html.ActionLink("Países", "Index", "Country", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Ciudades", "Index", "City", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Customer", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Propietarios", "Index", "PropertyOwner", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("tiposMultimedia", "Index", "MultimediaType", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Propiedades", "Index", "Property", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("feedback", "Index", "Feedback", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("reservation", "Index", "Reservation", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    <li class="nav-item">@Html.Partial("_LoginPartial")</li>
                </ul>


            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
